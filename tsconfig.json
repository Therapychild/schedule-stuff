{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": false,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
